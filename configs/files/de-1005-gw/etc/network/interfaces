# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback
#LAN
allow-hotplug eno1
iface eno1 inet static
 address 10.1.0.254
 netmask 255.252.0.0
 gateway 192.168.0.80
 dns-servers 10.0.0.110 10.0.0.111 10.0.0.136
#WLAN
allow-hotplug eno2
iface eno2 inet static
 address 192.168.77.254
 netmask 255.255.255.0
 gateway 192.168.0.80
 dns-servers 10.0.0.110 10.0.0.111 192.168.77.254
#WAN
allow-hotplug enp1s0f0
iface enp1s0f0 inet static
 address 192.168.0.80
 netmask 255.255.255.0
 gateway 192.168.0.1
 dns-servers 10.0.0.110 10.0.0.111 1.1.1.1
#MAN
allow-hotplug enp1s0f1
iface enp1s0f1 inet static
 address 192.168.8.254
 netmask 255.255.255.0
 gateway 192.168.0.80
 dns-servers 10.0.0.110 10.0.0.111 192.168.8.254
#